{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "go build -o crypto-final cmd/main.go"
    },
    "deploy": {
      "startCommand": "./crypto-final",
      "healthcheckPath": "/",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }